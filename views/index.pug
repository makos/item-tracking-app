extends layout

block content
  script(src="javascripts/sure.js")
  
  div.row
    div.col-md-4
      a(href="/add").btn.btn-primary Add new record
    div.col-md-8
  div.row
    div(style="height:2.5em").col-md-12
  div.row
    div.col-md-12
      if items
          table.table.table-striped.table-hover.table-sm.table-responsive-md
            tr
              thead.thead-light
                th Name
                th Amount
                th Price
                th Options
            each item in items
              tr
                td=item.Name
                td=item.Amount
                td=item.Price
                td
                  i.fas.fa-minus#delete &nbsp;
                  a(href="#" onclick="prompt(" + item.id + ")")#delete Delete
